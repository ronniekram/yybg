---
import { getEntry } from "astro:content";

import Page from "@layouts/Page.astro";

const { data } = await getEntry(`privacy`, `index`);

const date = new Date(data.lastUpdated).toLocaleDateString(`en-us`, {
  year: `numeric`,
  month: `long`,
  day: `numeric`,
});
---

<Page title={data.title} description={data.description}>
  <article class="body">
    <section class="w-fit text-center flex flex-col gap-y-3">
      <h1 class="font-xbold text-5xl sm:text-6xl md:text-7xl">{data.title}</h1>
      <p class="text-sm italic md:text-base">Last updated: {date}</p>
    </section>
    {
      data.policy.map((section) => (
        <section class="policy-section">
          <h2>{section.heading}</h2> <div set:html={section.body} class="content" />
        </section>
      ))
    }
  </article>
</Page>

<style>
  .body {
    @apply w-full flex flex-col items-center mx-auto max-w-[57rem] space-y-10 pt-14 pb-24 md:space-y-14 md:pt-16 md:pb-32 px-[6.1%] sm:px-[5%] sm:px-[5.2%] md:px-0;
  }

  .policy-section {
    @apply flex flex-col gap-y-2 md:gap-y-2.5;

    h2 {
      @apply font-bold text-grey-100 text-3xl sm:text-4xl md:text-5xl;
    }
  }

  .content {
    @apply gap-y-3 text-sm md:text-base flex flex-col;
  }
</style>
