---
import { Image } from "astro:assets";
import steam from "@assets/graphics/logo/steam.svg";
---

<section class="wrapper base place-items-center">
  <div class="col-span-3 col-start-1 sm:col-span-5 lg:col-span-6 xl:col-span-6 2xl:col-span-7">
    <h2 class="heading">Add Yum Yum Bloodgun to your Steam wishlist</h2>
  </div>
  <a
    class="col-span-3 transition duration-300 ease-in-out hover:scale-105 lg:col-span-4 2xl:col-span-5"
    href="#"
    target="_blank"
    rel="noreferrer"
    aria-label="Yum Yum Bloodgun on the Steam store"
  >
    <Image src={steam} alt="Steam's logo" loading="lazy" class="w-full" width={628} height={190} />
  </a>
</section>

<style>
  section {
    @apply place-items-center py-8 sm:py-10 xl:py-12;
  }

  .heading {
    @apply w-full text-balance text-sm font-bold sm:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl;
  }
</style>
