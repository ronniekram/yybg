---
import { Image } from "astro:assets";
import steam from "@assets/graphics/logo/steam.svg";
---

<section class="wrapper base place-items-center">
  <div
    class="col-span-3 w-full place-content-start sm:col-span-5 lg:col-span-6 xl:col-span-6 2xl:col-span-7"
  >
    <a
      href="https://store.steampowered.com/app/2414140?utm_source=longjuice&utm_campaign=splash&utm_medium=web"
      class="heading"
    >
      Wishlist Longjuice Squeeze
    </a>
  </div>
  <div class="col-span-3 transition duration-300 ease-in-out lg:col-span-4 2xl:col-span-5">
    <Image src={steam} alt="Steam's logo" loading="lazy" class="w-full" width={628} height={190} />
  </div>
</section>

<style>
  section {
    @apply place-items-center py-8 sm:py-10 xl:py-12;
  }

  .heading {
    @apply w-full text-left text-xs font-bold text-blue-100 transition duration-300 ease-in-out hover:text-blue-200 sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 3xl:text-6xl;
  }
</style>
