---
import { Image } from "astro:assets";
import steam from "@assets/graphics/logo/steam.svg";
---

<section class="wrapper base place-items-center">
  <div class="col-span-3 sm:col-span-5 lg:col-span-6 xl:col-span-5 2xl:col-span-7 col-start-1">
    <h2 class="heading">Want to wishlist Yum Yum Bloodgun?</h2>
  </div>
  <a
    class="col-span-3 lg:col-span-4 2xl:col-span-5 transition duration-300 ease-in-out hover:scale-105"
    href="#"
    target="_blank"
    rel="noreferrer"
    aria-label="Yum Yum Bloodgun on the Steam store"
  >
    <Image src={steam} alt="Steam's logo" loading="lazy" class="w-full" />
  </a>
</section>

<style>
  section {
    @apply place-items-center py-8 sm:py-10 xl:py-12;
  }

  .heading {
    @apply w-full text-balance text-base font-bold sm:text-3xl md:text-4xl lg:text-5xl 2xl:text-7xl;
  }
</style>
